@model BoozewasherApp_Web.Models.ViewModels.Attendances.AttendanceFormViewModel
@{
    ViewBag.Title = "TimeIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNet.Identity

@using (Html.BeginForm("TimeIn", "Attendance"))
{
    <p></p>
    <div class="jumbotron">
        <h1>@Html.ActionLink("Hello, " + User.Identity.GetUserName(), "Index", "Attendance")</h1>
        <p></p>
        <hr />
        @Html.LabelFor(t => t.Attendance.TimeInDate)
        @Html.TextBoxFor(t => t.Attendance.TimeInDate, new { @class = "form-control " })
        <p></p>
        @Html.LabelFor(t => t.Attendance.EmployeeId)
        @Html.TextBoxFor(t => t.Attendance.EmployeeId, new { @class = "form-control " })
        <p></p>
    </div>
}
@Html.AntiForgeryToken()
