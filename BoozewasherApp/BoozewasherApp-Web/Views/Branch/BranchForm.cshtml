@model BoozewasherApp_Web.Models.ViewModels.Branches.BranchFormViewModel
@{
    ViewBag.Title = "BranchForm";
}
<p></p>
<h2>Branch Form</h2>
<p></p>
@using (Html.BeginForm("Save", "Branch"))
{
    @Html.ValidationSummary(true, "Please fill up requirements");

    <div class="form-group">
        @Html.LabelFor(b => b.Branch.Name)
        @Html.TextBoxFor(b => b.Branch.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Branch.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Branch.Address)
        @Html.TextBoxFor(b => b.Branch.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Branch.Address)
    </div>

    <p></p>
    @Html.HiddenFor(b => b.Branch.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary"> Save </button>

}
