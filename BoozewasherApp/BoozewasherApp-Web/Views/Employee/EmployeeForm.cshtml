@model BoozewasherApp_Web.Models.ViewModels.Employees.EmployeeFormViewModel
@{
    ViewBag.Title = "EmployeeForm";
}
<p></p>
<h2>New Employee Form</h2>
<p></p>

@using (Html.BeginForm("Save", "Employee"))
{
    @Html.ValidationSummary(true, "Please fill up requirements");

    <div class="form-group">
        @Html.LabelFor(e => e.Employee.FirstName)
        @Html.TextBoxFor(e => e.Employee.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Employee.FirstName)
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Employee.MiddleName)
        @Html.TextBoxFor(e => e.Employee.MiddleName, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Employee.MiddleName)
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Employee.LastName)
        @Html.TextBoxFor(e => e.Employee.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Employee.LastName)
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Employee.Address)
        @Html.TextBoxFor(e => e.Employee.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Employee.Address)
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Employee.Birthdate)
        @Html.TextBoxFor(e => e.Employee.Birthdate, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Employee.Birthdate)
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Employee.TIN)
        @Html.TextBoxFor(e => e.Employee.TIN, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Employee.TIN)
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Employee.Email)
        @Html.TextBoxFor(e => e.Employee.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Employee.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Employee.ContactNo)
        @Html.TextBoxFor(e => e.Employee.ContactNo, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Employee.ContactNo)
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Employee.BranchId)
        @Html.DropDownListFor(e => e.Employee.BranchId, new SelectList(Model.Branches, "Id", "Name"), "Select Branch Name", new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Employee.BranchId)
    </div>
    <p></p>
    @Html.HiddenFor(e => e.Employee.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary"> Save </button>

}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
