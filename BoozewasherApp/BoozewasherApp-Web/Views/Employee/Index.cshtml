@model IEnumerable<BoozewasherApp_Web.Models.ContextModel.Employee>
@{
    ViewBag.Title = "Index";
}
<p></p>
<h1>Employees @Html.ActionLink("View Attendance", "Index", "Attendance", new { area = "" }, new { @class = "btn btn-outline-primary float-right" }) </h1>
@Html.ActionLink("New Employee", "New", "Employee", new { @class = "btn btn-outline-primary float-right" })
<p></p>
<p></p>
<table id="employees" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Birthdate</th>
            <th>TIN</th>
            <th>Email</th>
            <th>Contact No</th>
            <th>Branch</th>
            <th class="text-center"> Delete </th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#employees").DataTable({
                ajax: {
                    url: "API/Employees/GetEmployees",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "FirstName",
                        render: function (data, type, Employee) {
                            return "<a href='/Employee/Edit/" + Employee.Id + "'>" + Employee.FirstName + "</a>";
                        }
                    },
                    {
                        data: "MiddleName"
                    },
                    {
                        data: "LastName"
                    },
                    {
                        data: "Address"
                    },
                    {
                        data: "Birthdate"
                    },
                    {
                        data: "TIN"
                    },
                    {
                        data: "Email"
                    },
                    {
                        data: "ContactNo"
                    },
                    {
                        data: "Branch.Id"
                    },
                    {
                        data: "Id",
                        className: "text-center",
                        render: function (data) {
                            return "<button class=' btn btn-outline-primary js-delete' data-employee-id=" + data + "> Delete </button>";
                        }
                    }
                ]
            });
        });

        $("#employees").on("click", ".js-delete", function () {
            var button = $(this);

            bootbox.confirm("Would you like to delete this employee?", function (result) {
                if (result) {
                    $.ajax({
                        url: "API/Employees/DeleteEmployee/" + button.attr("data-employee-id"),
                        method: "DELETE",
                        success: function () {
                            button.parents("tr").remove();
                        }
                    });
                }
            });
        });
    </script>
}

