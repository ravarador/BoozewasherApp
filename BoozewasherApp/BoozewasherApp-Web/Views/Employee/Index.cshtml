@model IEnumerable<BoozewasherApp_Web.Models.ContextModel.Employee>
@{
    ViewBag.Title = "Index";
}
<p></p>
<h1>Employees</h1>
<p></p>

<table id="employees" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Birthdate</th>
            <th>TIN</th>
            <th>Email</th>
            <th>Contact No</th>
            <th>Branch</th>
            <th class="text-center"> Delete </th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#employees").DataTable({
                ajax: {
                    url: "API/Employees/GetEmployees",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "FirstName",
                        render: function (data, type, Employee) {
                            return "<a href='/Employee/Edit/" + Employee.Id + "'>" + Employee.Name + "</a>";
                        }
                    },
                    {
                        data: "MiddleName"
                    },
                    {
                        data: "LastName"
                    },
                    {
                        data: "Address"
                    },
                    {
                        data: "Birthdate"
                    },
                    {
                        data: "TIN"
                    },
                    {
                        data: "Email"
                    },
                    {
                        data: "ContactNo"
                    },
                    {
                        data: "Branch.Id"
                    },
                    {
                        data: "Id",
                        className: "text-center",
                        render: function (data) {
                            return "<button class=' btn btn-outline-primary js-delete' data-employee-id=" + data + "> Delete </button>";
                        }
                    }
                ]
            });

        });
    </script>
}

