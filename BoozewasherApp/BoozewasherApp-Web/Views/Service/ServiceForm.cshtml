@model BoozewasherApp_Web.Models.ViewModels.Services.ServiceFormViewModel
@{
    ViewBag.Title = "ServiceForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ServiceForm</h2>
@using (Html.BeginForm("Save", "Service"))
{
    @Html.ValidationSummary(true, "Please fill up requirements");
    <div class="form-group">
        @Html.LabelFor(s => s.Type)
        @Html.TextBoxFor(s => s.Type, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Type)
    </div>

    <div class="form-group">
        @Html.LabelFor(s => s.Description)
        @Html.TextBoxFor(s => s.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(s => s.Expense)
        @Html.TextBoxFor(s => s.Expense, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Expense)
    </div>
    <p></p>
    @Html.HiddenFor(s => s.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary"> Save </button>
}
@section	scripts	{
    @Scripts.Render("~/bundles/jqueryval")
}

