<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <div class="navbar-header">

                @Html.ActionLink("Boozewasher", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Services", "Index", "Service", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Vehicles", "Index", "Vehicle", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Items", "Index", "Item", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Transactions", "Index", "Transaction", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Branches", "Index", "Branch", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Employees", "Index", "Employee", new { area = "" }, new { @class = "navbar-brand" })
            </div>
                @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Boozewasher</p>
        </footer>
    </div>

  
    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
