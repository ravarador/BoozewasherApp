@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right navbar-dark bg-primary">
    <li class="dropdown navbar-dark bg-primary">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" id="dropdownMenuLink1" href="#" role="button" aria-haspopup="true" aria-expanded="false"> Settings </a>
        <div class="dropdown-menu navbar-light bg-light" aria-labelledby="dropdownMenuLink1" >
            <a class="dropdown-item" href="@Url.Action("Index", "Manage")"> User Profile </a>
            <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()"> Log off </a>
        </div>
    </li>
</ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right navbar-dark bg-primary">
    <li class="dropdown navbar-dark bg-primary">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" id="dropdownMenuLink2" href="#" role="button" aria-haspopup="true" aria-expanded="false"> Settings </a>
        <div class="dropdown-menu navbar-light bg-light" aria-labelledby="dropdownMenuLink2">
            <a class="dropdown-item" href="@Url.Action("Register", "Account")"> Register </a>
            <a class="dropdown-item" href="@Url.Action("Login", "Account")"> Login </a>
        </div>
    </li>
</ul>
}
