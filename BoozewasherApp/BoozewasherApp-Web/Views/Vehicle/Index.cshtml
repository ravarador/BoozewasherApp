@model  IEnumerable<BoozewasherApp_Web.Models.ContextModel.Vehicle>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p></p>
<h1>Vehicles</h1>
<p></p>

@if (!Model.Any())
{
    <p>No vehicles available.</p>
}
<p></p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Type</th>
            <th>Description</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicles in Model)
        {
        <tr>
            <td>@Html.ActionLink(vehicles.Type, "Edit", "Vehicle", new { id = vehicles.Id }, null)</td>
            <td>@vehicles.Description</td>
            <td>@vehicles.Brand</td>
            <td>@vehicles.Model</td>
            <td>@Html.ActionLink("Delete", "Delete", "Vehicle", new { id = vehicles.Id }, null)</td>
        </tr>
        }
    </tbody>
</table>
