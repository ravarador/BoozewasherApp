@model BoozewasherApp_Web.Models.ViewModels.Vehicles.VehicleFormViewModel
@{
    ViewBag.Title = "VehicleForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vehicle</h2>
<p></p>
@using (Html.BeginForm("Save", "Vehicle"))
{
    @Html.ValidationSummary(true, "Please fill up requirements");

    <div class="form-group">
        @Html.LabelFor(v => v.Vehicle.Type)
        @Html.TextBoxFor(v => v.Vehicle.Type, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Vehicle.Type)
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.Vehicle.Description)
        @Html.TextBoxFor(v => v.Vehicle.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Vehicle.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.Vehicle.Brand)
        @Html.TextBoxFor(v => v.Vehicle.Brand, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Vehicle.Brand)
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.Vehicle.Model)
        @Html.TextBoxFor(v => v.Vehicle.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Vehicle.Model)
    </div>

    <p></p>
    @Html.HiddenFor(v => v.Vehicle.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary"> Save </button>

}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
